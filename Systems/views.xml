      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01</ground-level-nearplane-m>
      <x-offset-m type="double" archive="y"> 0.000 </x-offset-m> <!--Right-->
      <y-offset-m type="double" archive="y"> 4.450 </y-offset-m> <!--Up-->
      <z-offset-m type="double" archive="y"> 8.500 </z-offset-m> <!--Back-->
      <pitch-offset-deg type="double"> -5 </pitch-offset-deg>
      <default-field-of-view-deg type="double"> 30 </default-field-of-view-deg>
    </config>
  </view>

  <view n="0">
    <internal archive="y">true</internal>
    <config>
      <x-offset-m type="double" archive="y"> -0.54156 </x-offset-m> <!-- Right -->
