<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <chase-distance-m type="double" archive="y"> -30 </chase-distance-m>

  <view n="100">
    <name>Co pilote</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01</ground-level-nearplane-m>
      <pitch-offset-deg type="double">-5</pitch-offset-deg>
      <x-offset-m type="double" archive="y">  0.54156 </x-offset-m> <!-- Right -->
      <y-offset-m type="double" archive="y"> -1.05604 </y-offset-m> <!-- Up    -->
      <z-offset-m type="double" archive="y"> -7.24172 </z-offset-m> <!-- Back  -->
      <pitch-offset-deg type="double"> -10 </pitch-offset-deg>
      <default-field-of-view-deg type="double"> 65 </default-field-of-view-deg>
    </config>
  </view>

  <view n="101">
    <name>Tail Camera View</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
